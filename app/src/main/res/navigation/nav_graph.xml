<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.kristantosean.catfactsapp.ui.list.CatListFragment"
        android:label="@string/cat_list"
        tools:layout="@layout/fragment_cat_list">

        <action
            android:id="@+id/action_catListFragment_to_catDetailFragment"
            app:destination="@id/detailFragment" />

    </fragment>

    <fragment
        android:id="@+id/detailFragment"
        android:name="com.kristantosean.catfactsapp.ui.detail.CatDetailFragment"
        android:label="@string/cat_detail"
        tools:layout="@layout/fragment_cat_detail" >
        <argument
            android:name="id"
            app:argType="string" />
    </fragment>

</navigation>